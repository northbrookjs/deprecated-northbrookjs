{
  "name": "northbrookjs",
  "description": "Monorepo for Northbrook Core and Default plugins",
  "version": "1.0.0",
  "author": "Tylor Steinberger <tlsteinberger167@gmail.com>",
  "bugs": {
    "url": "https://github.com/northbrookjs/northbrookjs/issues"
  },
  "config": {
    "ghooks": {
      "commit-msg": "node ./node_modules/.bin/validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": "@northbrook/commit-types"
    }
  },
  "devDependencies": {
    "@northbrook/eslint": "^1.2.1",
    "@northbrook/mocha": "^1.0.0",
    "buba": "^2.0.4",
    "ejs": "^2.5.2",
    "ghooks": "^1.3.2",
    "khaos": "^0.9.3",
    "markdown-to-html": "0.0.11",
    "markdox": "^0.1.10",
    "mkdirp": "^0.5.1",
    "northbrook": "^3.1.0",
    "rimraf": "^2.5.4",
    "validate-commit-msg": "^2.8.0"
  },
  "homepage": "https://github.com/northbrookjs/northbrookjs#readme",
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/northbrookjs/northbrookjs.git"
  },
  "scripts": {
    "build": "bash ./.scripts/pretest.sh",
    "commit": "northbrook commit",
    "documentation": "northbrook documentation",
    "release": "northbrook release",
    "report": "northbrook exec -- ../node_modules/.bin/nyc report --reporter html --reporter text",
    "pretest": "bash ./.scripts/pretest.sh",
    "test": "northbrook eslint && northbrook exec -- npm test"
  }
}
